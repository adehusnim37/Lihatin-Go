# Bind DB ports. Keep 127.0.0.1 if app runs in same server.
# If backend is on another server, use private VPN/LAN IP and lock firewall to backend IP only.
DB_BIND_IP=127.0.0.1

# MySQL credentials
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD_MIN_24_CHARS
MYSQL_DATABASE=lihatin_go
MYSQL_USER=lihatin_app
MYSQL_PASSWORD=CHANGE_ME_APP_PASSWORD_MIN_24_CHARS

# Valkey credentials (kept as REDIS_* for app compatibility)
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_MIN_24_CHARS

# Backup behavior
BACKUP_RETENTION_DAYS=14
